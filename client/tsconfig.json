{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"]
    }
  },
  "include": [
    "src",
    "pages",
    ".next/types/**/*.ts",
    "../static/client/**/*.ts",
    "static/sign-up/SignUpInputs.ts"
  ]
}
